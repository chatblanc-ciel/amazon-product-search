{
    "function_score": {
        "query": {
            "dis_max": {
                "queries": [
                    {% for query in queries %}
                    {
                        "multi_match": {
                            "query": "{{ query }}",
                            "type": "cross_fields",
                            "fields": {{ fields | tojson }},
                            "operator": "and",
                            "boost": {{ boost }}
                        }
                    }
                    {% if not loop.last %}
                    ,
                    {% endif %}
                    {% endfor %}
                ]
            }
        },
        "functions": [
            {% if is_phrase_match_boost_enabled %}
            {
                "filter": {
                    "match_phrase": {
                        "product_title": {
                            "query": "{{ queries[0] }}",
                            "boost": 2
                        }
                    }
                }
            }
            {% endif %}
        ]
    }
}
