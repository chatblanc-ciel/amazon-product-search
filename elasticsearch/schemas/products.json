{
  "settings": {
    "analysis": {
      "analyzer": {
        "text_pre_analyzed_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "asciifolding"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "product_id": {
        "type": "keyword"
      },
      "product_title": {
        "type": "text",
        "analyzer": "text_pre_analyzed_analyzer",
        "search_analyzer": "text_pre_analyzed_analyzer"
      },
      "product_description": {
        "type": "text",
        "analyzer": "text_pre_analyzed_analyzer",
        "search_analyzer": "text_pre_analyzed_analyzer"
      },
      "product_bullet_point": {
        "type": "text",
        "analyzer": "text_pre_analyzed_analyzer",
        "search_analyzer": "text_pre_analyzed_analyzer"
      },
      "product_brand": {
        "type": "text",
        "analyzer": "text_pre_analyzed_analyzer",
        "search_analyzer": "text_pre_analyzed_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "product_color": {
        "type": "text",
        "analyzer": "text_pre_analyzed_analyzer",
        "search_analyzer": "text_pre_analyzed_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "product_keybert": {
        "type": "text",
        "analyzer": "text_pre_analyzed_analyzer",
        "search_analyzer": "text_pre_analyzed_analyzer"
